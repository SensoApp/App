    <body>
        <div>
            <img src="/Applications/Apps/Senso/senso/public/img/Logo_Senso_3.png" alt="Logo"  width="100" height="100" class="logo"/>
        </div>
        <div class="information">
            <table width="100%">
                <tr>
                    <td align="left" style="width: 40%;">
                        <h3>{{ name }}</h3>
                    </td>
                    <td align="right" style="width: 40%;">

                        <h3>SENSO SARL</h3>
                        <pre>
                            http://www.senso.lu
                            3 rue Sangels
                            5425 Gostingen
                        </pre>
                    </td>
                </tr>
            </table>
        </div>
        <br/>
        <div class="invoice">
            <h3>Timesheet {{ month }}</h3>
            <table width="100%">
                <thead>
                    <tr>
                        <th>Number of days worked</th>
                        <th>Including Bank holidays</th>
                        <th>Number of Saturdays</th>
                        <th>Number of Sundays</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ nbreofdays }}</td>
                        <td>{{ nbreofbk }}</td>
                        <td>{{ nbreofsat }}</td>
                        <td>{{ nbreofsun }}</td>
                    </tr>
                </tbody>
                <br>
                <br>
                <br>
                <br>
                <tfoot id="totaltf">
                    <tr>
                        <td colspan="1"></td>
                        <td align="left">Total</td>
                        <td align="left" class="gray">{{ nbreofdays }}</td>
                    </tr>
                </tfoot>
            </table>
            <br>
            <br>
            <br>
            <div id="sig">Signature</div>
            <div class="row" id="sig2">
                <label for="sign">Consultant</label>
                <input type="text" style=" width:50% ">
                <label for="sign">Client</label>
                <input type="text" style=" width: 30% ">
            </div>
            <br/>
            <br/>
            <br/>
            <div style="padding-top: 100px;">


            </div>
        </div>
        <div class="information" style="position: absolute; bottom: 0;">
            <table width="100%">
                <tr>
                    <td align="left" style="width: 50%;">
                    </td>
                    <td align="right" style="width: 50%;">
                        For Consultants By Consultants
                    </td>
                </tr>
            </table>
        </div>
