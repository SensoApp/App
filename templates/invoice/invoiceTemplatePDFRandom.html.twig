    </head>
    <body>
        <div>
            <img src="/Applications/Apps/Senso/senso/public/img/Logo_Senso_3.png" alt="Logo"  width="100" height="100" class="logo"/>
        </div>
        <div class="information">
            <table width="100%">
                <tr>
                    <td align="left" style="width: 40%;">
                        <h3>{{ name }}</h3>
                    </td>
                    <td align="right" style="width: 40%;">

                        <h3>SENSO SARL</h3>
                        <pre>
                            http://www.senso.lu
                            3, rue Sangels
                            L-5425 Gostingen
                        </pre>
                    </td>
                </tr>
            </table>
        </div>
        <br/>
        <div class="invoice">
            <h3>Invoice {{ invoice.date|date('d-m-Y') }} <em>number : {{ invoice.invoicenumber }}</em> </h3>
            <table width="100%">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Units</th>
                        {% if invoice.units > 0 %}
                        <th>Rate</th>
                        <th>Amount</th>
                        {% else %}
                        <th>Amount</th>
                        {% endif %}
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            {{invoice.description }}
                        </td>
                    {% if invoice.units > 0 %}
                        <td>
                            {{invoice.units}}
                        </td>
                        <td>
                            {{ invoice.rate }} EUR
                        </td>
                        <td>
                            {{ invoice.amountForUnits}} EUR
                        </td>
                    {% else %}
                        <td>
                            <i>N/A</i>
                        </td>
                        <td>
                            {{ invoice.amount }} EUR
                        </td>
                    {% endif %}
                    </tr>
                </tbody>
            </table>
            <br/>
            <br/>
            <br/>
            <br/>
            <br/>
            <br/>
            <br/>
            <table>
                <thead>
                    <tr>
                        <th>
                            Gross amount
                        </th>
                        <th>
                            VAT rate
                        </th>
                        <th>
                            VAT
                        </th>
                        <th>

                        </th>
                        <th>
                            Total
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        {% if  invoice.amount  > 0 %}
                        <td>
                            {{ invoice.amount }} EUR
                        </td>
                        {% else %}
                        <td>
                            {{ invoice.amountForUnits }} EUR
                        </td>
                        {% endif %}
                        {%  set vatpercentage =   invoice.vat * 100  %}
                        <td>
                            {{ vatpercentage }}%
                        </td>

                        <td>
                            {{invoice.vatamount}} EUR
                        </td>
                        <td>

                        </td>
                        <td>
                            {{ invoice.amounttc }} EUR
                        </td>
                    </tr>
                </tbody>
            </table>
            <br/>
            <br/>
            <br/>
            <br/>
            <div style="padding-top: 100px;">
            </div>
        </div>
        <div class="information" style="position: absolute; bottom: 0;">
            <table width="100%">
                <tr>
                    <td align="left" style="width: 50%;">
                    </td>
                    <td align="right" style="width: 50%;">
                        For Consultants By Consultants
                    </td>
                </tr>
            </table>
        </div>
    </body>
</html>
