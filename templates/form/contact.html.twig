{% extends 'base.html.twig' %}
{% block head %}
    {{ parent() }}
    <style type="text/css">
        html {background-color: #9d9d9d }
    </style>
{% endblock %}
{% block body %}
    <div class="container-fluid">
        <br>
        <br>
        <div class="row">
            <div class="col-md-2">
                <h2 class="title text-center">Side Menu</h2>
                <div class="container-fluid">

                </div>
            </div>
            <div class="col-md-10" style="background: grey">
                <h2 class="title text-center">Create Contact</h2>
                <div class="container-fluid">
                    <div class="row">
                        {{ form_start(form) }}
                        <br>
                        <div class="col-md-12">
                            <div class="col-md-6">
                                {{ form_row(form.firstname) }}
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-6">
                                {{ form_row(form.lastname) }}
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="col-md-6">
                                {{ form_row(form.dateofbirth) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            {{ form_row(form.sexe) }}
                        </div>
                        <div class="col-md-4">
                            {{ form_row(form.contacttype) }}
                        </div>
                        <div class="col-md-4">
                            {{ form_row(form.socialesecunumber) }}
                        </div>
                    </div>
                    <hr style="width: 100%; color: cornflowerblue; height: 1px; background-color:cornflowerblue;" />
                    <div class="row">
                        <h4 class="title text-center">Contact details</h4>
                        <br>
                        <div class="col-md-6">
                            {{ form_row(form.mail.vars.prototype) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.phone.vars.prototype) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.address.vars.prototype) }}
                        </div>
                    </div>
                    <hr style="width: 100%; color: cornflowerblue; height: 1px; background-color:cornflowerblue;" />
                        <div class="row">
                            <h4 class="title text-center">Citizenship details</h4>
                            <div class="col-md-6">
                                {{ form_row(form.citizenshipdetails.vars.prototype) }}
                            </div>
                        </div>
                    <hr style="width: 100%; color: cornflowerblue; height: 1px; background-color:cornflowerblue;" />
                        <div class="row">
                            <h4 class="title text-center">Bank details</h4>
                            <div class="col-md-6">
                                {{ form_row(form.bankdetails.vars.prototype) }}
                            </div>
                        </div>
                    <hr style="width: 100%; color: cornflowerblue; height: 1px; background-color:cornflowerblue;" />
                    <div class="row">
                        <h4 class="title text-center">Contractual details</h4>
                        <div class="col-md-6">
                            {{ form_row(form.contract.vars.prototype) }}
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    {{ form_row(form.Submit) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

