{% extends 'base.html.twig' %}

{% block head %}
    {{ parent() }}
    <style type="text/css">
        html {background-color: #9d9d9d }
    </style>
{% endblock %}
{% block body %}
    <body>
    {% include 'header.html.twig' %}
    <br>
    <br>
    <br>
    <!-- form user info -->
        <div class="col-md-8 offset-md-2">
        <span class="anchor" id="formUserEdit"></span>
        <hr class="my-5">
        <a href="{{ path('adminsenso')}}">
            <button class="btn btn-success" value="Back">
                <i class="fa fa-arrow-left" aria-hidden="true" style="font-weight: bold"> Back</i>
            </button>
        </a>
        <br>
        <br>
        <div class="card card-outline-secondary">
            <div class="card-header">
                <h3 class="mb-0 text-center">User Information</h3>
            </div>
        </div>
        <br>
        <div class="card-body">
                {{ form_start(form)}}
                {{ form_errors(form) }}
                <div class="form-group row">
                    <div class="col-lg-9">
                        {{ form_row(form.firstname) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-9">
                        {{ form_row(form.lastname) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-9">
                        {{ form_row(form.sexe) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-9">
                        {{ form_row(form.dateofbirth) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-9">
                        {{ form_row(form.contacttype) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-9">
                        {{ form_row(form.socialesecunumber) }}
                    </div>
                </div>
                <div class="card-header">
                    <h3 class="mb-0">Contact Details</h3>
                </div>
                <br>
                <div class="form-group row">
                    <div class="col-lg-9">
                        {{ form_row(form.mail.vars.prototype) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-9">
                        {{ form_row(form.phone.vars.prototype) }}
                    </div>
                </div>
                <br>
                <div class="form-group row">
                    <div class="col-lg-9">
                        {{ form_row(form.address.vars.prototype) }}
                    </div>
                </div>
                <br>
                <br>
                <div class="card-header">
                    <h3 class="mb-0">Citizenship Details</h3>
                </div>
                <div class="form-group row">
                    <div class="col-lg-9">
                        {{ form_row(form.citizenshipdetails.vars.prototype) }}
                    </div>
                </div>
                <br>
                <div class="card-header">
                    <h3 class="mb-0">Bank Details</h3>
                </div>
                <div class="form-group row">
                    <div class="col-lg-9">
                        {{ form_row(form.bankdetails.vars.prototype) }}
                    </div>
                </div>
                <br>
                <div class="card-header">
                    <h3 class="mb-0">Contract details</h3>
                </div>
                <div class="form-group row">
                    <div class="col-lg-9">
                        {{ form_row(form.contract.vars.prototype) }}
                    </div>
                </div>
                <br>
                <br>
                <div class="form-group row">
                    <div class="col-lg-9">
                        {{ form_row(form.Submit) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </body>
{% endblock %}

