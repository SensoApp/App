{% extends 'base.html.twig' %}
{% block body %}
    <header>
        <!-- header-area start -->
        <div id="sticker" class="header-area">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-sm-12">

                        <!-- Navigation -->
                        <nav class="navbar navbar-default navbar-light">
                            <!-- Brand and toggle get grouped for better mobile display -->
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".bs-example-navbar-collapse-1" aria-expanded="false">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                <a href="{{ path('homepage') }}" >
                                    <img src="{{ asset('img/Logo_Senso_3.png') }}" alt="logo">
                                </a>
                                <!-- Brand -->
                            </div>
                            <!-- Collect the nav links, forms, and other content for toggling -->
                            <div class="collapse navbar-collapse main-menu bs-example-navbar-collapse-1" id="navbar-example" >
                                <ul class="nav navbar-nav navbar-right" >
                                    <li class="active">
                                    <li>
                                        <a class="page-scroll" href="{{ path('homepage') }}">About</a>
                                    </li>
                                    <li>
                                        <a class="page-scroll" href="{{ path('homepage') }}">Services</a>
                                    </li>
                                    <li>
                                        <a class="page-scroll" href="{{ path('homepage') }}">Contact</a>
                                    </li>
                                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                        <li>
                                            <a class="btn btn-success"  href="{{ path('adminsenso') }}"><i>My</i>Senso</a>
                                        </li>
                                        <li>
                                            <a class="btn btn-primary" href="{{ path('app_logout') }}">Logout</a>
                                        </li>
                                    {% endif %}
                                </ul>
                            </div>
                            <!-- navbar-collapse -->
                        </nav>

                        <!-- END: Navigation -->
                    </div>
                </div>
            </div>
        </div>
        <!-- header-area end -->
    </header>
    <br>
    <br>
    <br>
    <div class="container-fluid">
    {% for message in app.session.flashBag.get('success') %}
        <div class="col-lg-offset-3 col-md-4 text-center alert alert-success" id="alerFlash">
            <i class="fa fa-window-close text-right" aria-hidden="true">
                {{ message }}
            </i>
        </div>
    {% endfor %}
    <br>
    <br>
    <br>
        <div class="row">
            <h2 class="title text-center">List of Contacts</h2>
            <div class="col-lg-offset-8 col-md-1">
                <a href="{{ path('app_register') }}">
                    <input class="btn btn-success" value="Create User account">
                </a>
                <a href="{{ path('createcontact') }}">
                    <input class="btn btn-primary" value="Create Contact">
                </a>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="table-responsive">
                <table id="mytable" class="table table-bordred table-striped">
                    <thead>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Contact Type</th>
                        <th>View</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </thead>
                    <tbody>
                    {%  for mails in list %}
                        <tr>
                            <td>{{ mails.firstname }}</td>
                            <td>{{ mails.lastname }}</td>
                            {% if mails.phonenumber == null %}
                                <td>
                                    <i>No phone number recorded</i>
                                </td>
                            {% else %}
                                <td style="font-weight:bold ">{{ mails.phonenumber }}</td>
                            {% endif %}
                            {% if mails.mail == null %}
                                <td>
                                    <i>No email address recorded</i>
                                </td>
                            {% else %}
                                <td style="font-weight:bold ">{{ mails.mail }}</td>
                            {% endif %}
                            <td>{{ mails.contacttype }}</td>
                            <td>
                                <p data-placement="top" data-toggle="tooltip" title="View">
                                    <a href="{{ path('view', {id:  mails.id}) }}">
                                        <button class="btn btn-success btn-xs" data-title="View" data-toggle="modal" data-target="" ><span class="glyphicon glyphicon-zoom-in"></span>
                                        </button>
                                    </a>
                                </p>
                            </td>
                            <td>
                                <p data-placement="top" data-toggle="tooltip" title="Edit">
                                    <a href="{{ path('edit', {id:  mails.id}) }}">
                                        <button class="btn btn-primary btn-xs" data-title="View" data-toggle="modal" data-target="" ><span class="glyphicon glyphicon-pencil"></span>
                                        </button>
                                    </a>
                                </p>
                            </td>
                            <td>
                                <p data-placement="top" data-toggle="tooltip" title="Delete">
                                    <a href="{{ path('delete', {id:  mails.id}) }}">
                                        <button class="btn btn-danger btn-xs" data-title="View" data-toggle="modal" data-target="" ><span class="glyphicon glyphicon-trash"></span>
                                        </button>
                                    </a>
                                </p>
                            </td>

                        </tr>
                {% endfor %}
            </table>
        </div>
    </div>
    <script>
        $(function () {
            $('i').on('click', function () {
                setTimeout(
                    20000,
                    $('.alert').remove(),
                    location.reload()
                );
            });
        });
    </script>
{% endblock %}