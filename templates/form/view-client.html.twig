{% extends 'base_old.html.twig' %}
{% block body %}
    <body>
    {% include 'header.html.twig' %}
    <br>
    <br>
    <br>
    <!-- form user info -->
    <div class="col-md-8 offset-md-2">
        <span class="anchor" id="formUserEdit"></span>
        <hr class="my-5">
        <a href="{{ path('adminsenso')}}">
            <button class="btn btn-success" value="Back">
                <i class="fa fa-arrow-left" aria-hidden="true" style="font-weight: bold"> Back</i>
            </button>
        </a>
        <br>
        <br>
        <div class="card card-outline-secondary">
            <div class="card-header">
                <h3 class="mb-0 text-center">Client Information</h3>
            </div>
        </div>
        <br>
        <div class="card-body">
            <form class="form" role="form" autocomplete="off">
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">First name</label>
                    <div class="col-lg-9">
                        <input class="form-control" type="text" value="{{ list[0].clientname }}" readonly>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Type</label>
                    <div class="col-lg-9">
                        <input class="form-control" type="text" value="{{ list[0].type }}"readonly>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Contact Person</label>
                    <div class="col-lg-9">
                        <input class="form-control" type="text" value="{{ list[0].contactperson }}"readonly>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Email </label>
                    <div class="col-lg-9">
                        <input class="form-control" type="email" value="{{ list[0].mail }}" readonly>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Phone</label>
                    <div class="col-lg-9">
                        <input class="form-control" type="text" value="{{ list[0].phonenumber }}" readonly>
                    </div>
                </div>
                <br>
                <div class="form-group row">
                    <div class="col-lg-9">
                        <a href="{{ path('adminsenso')}}">
                            <button class="btn btn-success" value="Back">
                                <i class="fa fa-arrow-left" aria-hidden="true" style="font-weight: bold"> Back</i>
                            </button>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    </body>
    <!-- /form user info -->
{% endblock %}