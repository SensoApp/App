{% extends 'base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <h2 class="title text-center">List of Contacts</h2>
        </div>
        <div class="row">
            <div class="table-responsive">
                <table id="mytable" class="table table-bordred table-striped">
                    <thead>
                        <th><input type="checkbox" id="checkall" /></th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Contact Type</th>
                        <th>View</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </thead>
                    <tbody>
                    {%  for mails in list %}
                        <tr>
                            <td><input type="checkbox" class="checkthis" /></td>
                            <td>{{ mails.firstname }}</td>
                            <td>{{ mails.lastname }}</td>
                            {% if mails.phonenumber == null %}
                                <td>
                                    <i>No phone number recorded</i>
                                </td>
                            {% else %}
                                <td style="font-weight:bold ">{{ mails.phonenumber }}</td>
                            {% endif %}
                            {% if mails.mail == null %}
                                <td>
                                    <i>No email address recorded</i>
                                </td>
                            {% else %}
                                <td style="font-weight:bold ">{{ mails.mail }}</td>
                            {% endif %}
                            <td>{{ mails.contacttype }}</td>
                            <td>
                                <p data-placement="top" data-toggle="tooltip" title="Edit">
                                    <button class="btn btn-success btn-xs" data-title="View" data-toggle="modal" data-target="" >
                                        <a href="{{ path('view', {id:  mails.id}) }}"><span class="glyphicon glyphicon-zoom-in"></span></a>
                                    </button>
                                </p>
                            </td>
                            <td>
                                <p data-placement="top" data-toggle="tooltip" title="Edit">
                                    <button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="{{ path('edit') }}" ><span class="glyphicon glyphicon-pencil"></span>
                                    </button>
                                </p>
                            </td>
                            <td>
                                <p data-placement="top" data-toggle="tooltip" title="Delete">
                                    <button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="{{ path('delete') }}" ><span class="glyphicon glyphicon-trash"></span>
                                    </button>
                                </p>
                            </td>
                        </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}