{% extends 'base_old.html.twig' %}
{% block body %}
    <body>
    {% include 'header.html.twig' %}
    <br>
    <br>
    <br>
    <div class="container-fluid">
        {% for message in app.session.flashBag.get('success') %}
            <div class="col-lg-offset-3 col-md-4 text-center alert alert-success" id="alerFlash">
                <i class="fa fa-window-close text-right" aria-hidden="true">
                    {{ message }}
                </i>
            </div>
        {% endfor %}
        <br>
        <br>
        <br>
        <section class="container-fluid">
            <div class="row">
                <h2 class="title text-center">Balance Per Users</h2>
            </div>
            <br>
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-bordred table-striped">
                        <thead>
                        <tr>
                            <th>First name</th>
                            <th>Last name</th>
                            <th>Amount</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for balance in Balance %}
                            <tr>
                                <td>{{ balance.firstname }}</td>
                                <td>{{ balance.lastname }}</td>
                                <td>{{ balance.balance }} â‚¬</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
        <br>
        <br>
        <br>
        <div class="row">
            <h2 class="title text-center">Statements</h2>
        </div>
        <br>

        <div class="row">

            <form method="post" class="col-md-12">

                <div class="col-md-3 text-center">
                    <label for="search">User name</label>
                    <br>
                    <div class="col-md-12">
                        <select name="User-id" >
                            {% for value in Balance %}
                                <option  value="{{ value.consultants }}">
                                    {{ value.firstname }}
                                    {{ value.lastname }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                <div class="col-md-4 text-center">
                    <label for="search">Amount between</label>
                    <br>
                    <div class="col-md-6">
                        <input class="form-control" type="number" placeholder="Min amount" name="Min-amount">
                    </div>
                    <div class="col-md-6">
                        <input class="form-control" type="number" placeholder="Max amount" name="Max-amount">
                    </div>
                </div>

                <div class="col-md-4 text-center">
                    <label for="search" class="text-center">Dates between</label>
                    <br>
                    <div class="col-md-6">
                        <input class="form-control" type="date" placeholder="Min date" name="Min-date">
                    </div>
                    <div class="col-md-6">
                        <input class="form-control" type="date" placeholder="Max date" name="Max-date">
                    </div>
                    <input type="hidden" name="specialrequest" value="1">
                </div>
                <br>
                <button class="btn btn-primary col-md-1">Submit</button>
            </form>
            <br><br><br><br><br><br>
            <section class="col-md-12">
                <div class="table-responsive">
                    <table id="mytable" class="table table-bordred table-striped">
                        <thead class="label-primary" style="color: whitesmoke">
                        <tr>
                            <th>#</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Reference</th>
                            <th>Operation</th>
                            <th>Communication</th>
                            <th>Date</th>
                            <th>Amount</th>
                            <th>Currency</th>
                            <th>Last uploaded</th>
                            <th>Delete</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if pagination != null %}
                            {% set id = null %}
                            {% set idline = 0 %}
                            {% for list in pagination %}
                                {% set idline = idline +1 %}
                                <tr>
                                    <td>{{ idline }}</td>
                                    <td>{{ list.firstname }}</td>
                                    <td>{{ list.lastname }}</td>
                                    <td class="reference">{{ list.referencemovement }}<i class="hidden">-</i></td>
                                    <td>{{ list.operations }}</td>
                                    <td>{{ list.communication }}</td>
                                    <td>{{ list.operationdate|date('d-M-Y') }}</td>
                                    <td class="text-right">{{ list.amount|number_format(2, '.', ',') }}</td>
                                    <td>EUR</td>
                                    <td>{{ list.updated_at }}</td>
                                    <td>
                                        <p data-placement="top" data-toggle="tooltip" title="Delete">
                                            <a href="{{ path('delete_statements', {id : list.id}) }}">
                                                <button class="btn btn-danger btn-xs" data-title="View"
                                                        data-toggle="modal"
                                                        data-target=""><span class="glyphicon glyphicon-trash"></span>
                                                </button>
                                            </a>
                                        </p>
                                    </td>
                                </tr>

                                {% for message in app.flashes('error') %}
                                    <div class="alert alert-danger">
                                        {{ message }}
                                    </div>
                                {% endfor %}


                                {% set id = list.referencemovement %}
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td>
                                    <i>No statement recorded</i>
                                </td>
                            </tr>
                        {% endif %}
                        <div class="navigation">
                            {{ knp_pagination_render(pagination) }}
                        </div>
                    </table>
                </div>
            </section>
        </div>
        {% include 'footer.html.twig' %}
        <script>
            $(function () {
                $('i').on('click', function () {
                    setTimeout(
                        20000,
                        $('.alert').remove(),
                        location.reload()
                    );
                });
            });
        </script>
